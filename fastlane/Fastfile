# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  desc "Runs all the tests"
  lane :ci_test do

    # We make sure the app compiles
    gradle(
        task: "assemble",
        build_type: "Debug"
    )

    # Then run the unit tests
    gradle(
      task: "test",
      build_type: "DebugUnitTest"
    )

    gradle(
      task: "api:test",
    )
  end

  desc "Submit a build to Google Play, in the internal lane"
  lane :release do

    gradleProperties = {
        versionCode: 255321 + ENV['GITHUB_RUN_NUMBER'].to_i, #255321 is the last build number used on GitlabCI
        googleMapsApiKey: ENV['GOOGLE_MAPS_API_KEY'],
        keystoreFilePath: '../private/timeforcoffee.jks',
        keystoreKeyAlias: ENV['PLAYSTORE_KEY_ALIAS'],
        keystoreKeyPass:  ENV['PLAYSTORE_KEY_PASS'],
        keystoreStorePass: ENV['PLAYSTORE_STORE_PASS']
    }
    
    # build and release mobile app
    gradle(
        task: ":mobile:assemble",
        properties: gradleProperties
    )

    supply(
        track: 'internal',
        apk: 'mobile/build/outputs/bundle/release/mobile-release.aab'
    )

    # build and release wear app
     gradleProperties = {
        versionCode: 255321 + $env.GITHUB_RUN_NUMBER + 1, #255321 is the last build number used on GitlabCI, + 1 because wear app must have a different version number that mobile app
        googleMapsApiKey: $secrets.GOOGLE_MAPS_API_KEY,
        keystoreFilePath: 'private/timeforcoffee.jks',
        keystoreKeyAlias: $secrets.PLAYSTORE_KEY_ALIAS,
        keystoreKeyPass:  $secrets.PLAYSTORE_KEY_PASS,
        keystoreStorePass: $secrets.PLAYSTORE_STORE_PASS
    }

    gradle(
        task: ":wear:assemble",
        properties: gradleProperties
    )

    supply(
        track: 'internal',
        apk: 'wear/build/outputs/bundle/release/wear-release.aab'
    )
  end
end
